<mvc:View
    controllerName="sap.employees.exc.controller.EmployeeDetail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    core:require="{formatter: 'sap/employees/exc/model/Formatter'}">

    <Page title="Employee Profile" showNavButton="true" navButtonPress="onNavBack">

        <content>
            <ScrollContainer height="100%" width="100%" vertical="true">
                <VBox class="sapUiSmallMargin sapUiResponsiveMargin">

                    <!-- Profile Overview -->
                    <Panel headerText="Profile Overview" class="sapUiResponsiveContentPadding">
                        <VBox alignItems="Center">

                            <HBox justifyContent="End" width="100%" class="sapUiTinyMarginBottom">
                                <Button icon="sap-icon://edit" type="Transparent" press="onEdit" />
                                <Button icon="sap-icon://delete" type="Transparent" press="onDelete" />
                            </HBox>

                            <Avatar
                                src="{selectedEmployee>/avatar}"
                                displaySize="L"
                                backgroundColor="Accent6"
                                initials="{formatter: 'formatter.getInitials', parts: ['selectedEmployee>/name']}"
                                class="sapUiTinyMarginBottom" />

                            <Title text="{selectedEmployee>/name}" level="H2" />
                            <Text text="{selectedEmployee>/role}" class="sapUiTinyMarginTop" />
                        </VBox>
                    </Panel>

                    <!-- Quick Info -->
                    <Panel headerText="Employee Info" class="sapUiResponsiveMargin">
                        <VBox class="sapUiTinyMargin" alignItems="Start" >

                            <HBox alignItems="Center" class="sapUiTinyMarginBottom">
                                <core:Icon src="sap-icon://badge" size="1.25rem" class="sapUiTinyMarginEnd" />
                                <VBox>
                                    <Text text="ID" />
                                    <Text text="{selectedEmployee>/id}" />
                                </VBox>
                            </HBox>

                            <HBox alignItems="Center" class="sapUiTinyMarginBottom">
                                <core:Icon src="sap-icon://building" size="1.25rem" class="sapUiTinyMarginEnd" />
                                <VBox>
                                    <Text text="Department" />
                                    <Text text="{selectedEmployee>/department}" />
                                </VBox>
                            </HBox>

                            <HBox alignItems="Center" class="sapUiTinyMarginBottom">
                                <core:Icon src="sap-icon://money-bills" size="1.25rem" class="sapUiTinyMarginEnd" />
                                <VBox>
                                    <Text text="Salary" />
                                    <ObjectNumber
                                        number="{formatter: 'formatter.formatSalary', parts: ['selectedEmployee>/salary']}"
                                        state="Success" />
                                </VBox>
                            </HBox>

                        </VBox>
                    </Panel>


                    <!-- Contact -->
                    <Panel headerText="Contact Information" class="sapUiResponsiveMargin">
                        <VBox>

                            <HBox alignItems="Center" class="sapUiTinyMarginBottom">
                                <core:Icon src="sap-icon://email" size="1rem" class="sapUiTinyMarginEnd" />
                                <VBox>
                                    <Label text="Email" />
                                    <Link text="{selectedEmployee>/email}" href="mailto:{selectedEmployee>/email}" />
                                </VBox>
                            </HBox>

                            <HBox alignItems="Center" class="sapUiTinyMarginBottom">
                                <core:Icon src="sap-icon://phone" size="1rem" class="sapUiTinyMarginEnd" />
                                <VBox>
                                    <Label text="Phone" />
                                    <Link 
                                        text="{formatter: 'formatter.formatPhone', parts: ['selectedEmployee>/phone']}" 
                                        href="tel:{selectedEmployee>/phone}" />
                                </VBox>
                            </HBox>

                        </VBox>
                    </Panel>

                </VBox>
            </ScrollContainer>
        </content>

    </Page>
</mvc:View>

<mvc:View
    controllerName="sap.employees.exc.controller.EmployeeDetail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    core:require="{formatter: 'sap/employees/exc/model/Formatter'}">

    <Page title="{name}" showNavButton="true" navButtonPress="onNavBack" enableScrolling="false">

        <headerContent>
            <ToolbarSpacer />
            <Button
                icon="sap-icon://edit"
                type="Transparent"
                press="onEdit"
                tooltip="{i18n>editButton}" />
            <Button
                icon="sap-icon://delete"
                type="Transparent"
                press="onDelete"
                tooltip="{i18n>deleteButton}" />
        </headerContent>

        <content>
            <VBox class="sapUiSmallMargin sapUiResponsiveMargin" fitContainer="true">
                <Panel headerText="{i18n>personalDataTitle}" class="sapUiResponsiveContentPadding">
                    <VBox alignItems="Center">
                        <Avatar
                            src="{avatar}"
                            displaySize="L"
                            backgroundColor="Accent6"
                            initials="{formatter: 'formatter.getInitials', parts: ['name']}"
                            class="sapUiTinyMarginBottom" />

                        <Title text="{name}" level="H2" />
                        <Text text="{role}" class="sapUiTinyMarginTop" />
                    </VBox>
                </Panel>

                <Panel headerText="{i18n>employeePanelHeader}" class="sapUiResponsiveMargin">
                    <VBox class="sapUiTinyMargin" alignItems="Start" >

                        <HBox alignItems="Center" class="sapUiTinyMarginBottom">
                            <core:Icon src="sap-icon://badge" size="1.25rem" class="sapUiTinyMarginEnd" />
                            <VBox>
                                <Text text="{i18n>employeeIdLabel}" />
                                <Text text="{id}" />
                            </VBox>
                        </HBox>

                        <HBox alignItems="Center" class="sapUiTinyMarginBottom">
                            <core:Icon src="sap-icon://building" size="1.25rem" class="sapUiTinyMarginEnd" />
                            <VBox>
                                <Text text="{i18n>departmentLabel}" />
                                <Text text="{department}" />
                            </VBox>
                        </HBox>

                        <HBox alignItems="Center" class="sapUiTinyMarginBottom">
                            <core:Icon src="sap-icon://money-bills" size="1.25rem" class="sapUiTinyMarginEnd" />
                            <VBox>
                                <Text text="{i18n>salaryLabel}" />
                                <ObjectNumber
                                    number="{formatter: 'formatter.formatSalary', parts: ['salary']}"
                                    state="Success"
                                    tooltip="{i18n>salaryAmount}" />
                            </VBox>
                        </HBox>

                    </VBox>
                </Panel>

                <Panel headerText="{i18n>contactDataTitle}" class="sapUiResponsiveMargin">
                    <VBox>
                        <HBox alignItems="Center" class="sapUiTinyMarginBottom">
                            <core:Icon src="sap-icon://email" size="1rem" class="sapUiTinyMarginEnd" />
                            <VBox>
                                <Label text="{i18n>emailLabel}" />
                                <Link
                                    text="{email}"
                                    href="mailto:{email}"
                                    tooltip="{i18n>contactEmployee}" />
                            </VBox>
                        </HBox>

                        <HBox alignItems="Center" class="sapUiTinyMarginBottom">
                            <core:Icon src="sap-icon://phone" size="1rem" class="sapUiTinyMarginEnd" />
                            <VBox>
                                <Label text="{i18n>phoneLabel}" />
                                <Link
                                    text="{formatter: 'formatter.formatPhone', parts: ['phone']}"
                                    href="tel:{phone}"
                                    tooltip="{i18n>contactEmployee}" />
                            </VBox>
                        </HBox>
                    </VBox>
                </Panel>
            </VBox>
        </content>
    </Page>
</mvc:View>